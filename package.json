    "react-dropzone": "14.2.3",
    "react-error-boundary": "4.0.3",
    "react-full-screen": "1.1.1",
    "react-lazyload": "3.2.0",
    "react-markdown": "8.0.7",
    "react-portal": "4.2.2",
    "react-select": "5.7.0",
    "react-sliding-pane": "7.3.0",
